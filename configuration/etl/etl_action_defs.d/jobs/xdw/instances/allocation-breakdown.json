{
    "table_definition": {
        "$ref": "${table_definition_dir}/jobs/xdw/allocation-breakdown.json#/table_definition"
    },
    "source_query": {
        "records": {
            "allocation_breakdown_origin_id": "abdf.id",
            "person_id": "dpf.id",
            "allocation_id": "daf.id",
            "percentage": "abdf.percentage",
            "alloc_limit": "abdf.alloc_limit",
            "used_allocation": "abdf.used_allocation"
        },
        "joins": [
            {
                "name": "allocationbreakdown",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "abdf"
            },
            {
                "schema": "${SOURCE_SCHEMA}",
                "name": "person",
                "alias": "opf",
                "on": "abdf.person_id = opf.id"
            },
            {
                "schema": "${DESTINATION_SCHEMA}",
                "name": "person",
                "alias": "dpf",
                "on": "dpf.person_origin_id = abdf.person_id AND dpf.organization_id = (SELECT id FROM ${DESTINATION_SCHEMA}.organization WHERE federation_instance_id = ${instance_id} AND organization_origin_id = opf.organization_id)"
            },
            {
                "schema": "${SOURCE_SCHEMA}",
                "name": "allocation",
                "alias": "oaf",
                "on": "oaf.id = abdf.allocation_id"
            },
            {
                "schema": "${SOURCE_SCHEMA}",
                "name": "resourcefact",
                "alias": "orf",
                "on": "orf.id = oaf.resource_id"
            },
            {
                "schema": "${DESTINATION_SCHEMA}",
                "name": "resourcefact",
                "alias": "drf",
                "on": "drf.resource_origin_id = orf.id AND drf.organization_id = (SELECT id FROM ${DESTINATION_SCHEMA}.organization WHERE federation_instance_id = ${instance_id} AND organization_origin_id = orf.organization_id)"
            },
            {
                "schema": "${DESTINATION_SCHEMA}",
                "name": "allocation",
                "alias": "daf",
                "on": "daf.allocation_origin_id = abdf.allocation_id AND daf.resource_id = drf.id"
            }
        ],
        "macros": [
            {
                "$ref": "etl_macros.d/federated/federated.json#/getInstanceId"
            }
        ]
    }
}
