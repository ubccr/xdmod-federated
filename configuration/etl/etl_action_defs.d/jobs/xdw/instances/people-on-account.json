{
    "table_definition": {
        "$ref": "${table_definition_dir}/jobs/xdw/peopleonaccount.json#/table_definition"
    },
    "source_query": {
        "records": {
            "resource_id": "drf.id",
            "account_id": "daf.id",
            "person_id": "dpf.id",
            "start_time_ts": "start_time_ts",
            "end_time_ts": "end_time_ts",
            "allocationstate_id": "allocationstate_id"
        },
        "joins": [
            {
                "name": "peopleonaccount",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "opoa"
            },
            {
                "name": "person",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "opf",
                "on": "opf.id = opoa.person_id"
            },
            {
                "name": "resourcefact",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "orf",
                "on": "orf.id = opoa.resource_id"
            },
            {
                "schema": "${DESTINATION_SCHEMA}",
                "name": "person",
                "alias": "dpf",
                "on": "dpf.person_origin_id = opf.id AND dpf.organization_id = (SELECT id FROM ${DESTINATION_SCHEMA}.organization WHERE opf.organization_id = organization_origin_id AND federation_instance_id = ${instance_id})"
            },
            {
                "schema": "${DESTINATION_SCHEMA}",
                "name": "account",
                "alias": "daf",
                "on": "daf.federation_instance_id = ${instance_id} AND daf.account_origin_id = opoa.account_id"
            },
            {
                "schema": "${DESTINATION_SCHEMA}",
                "name": "resourcefact",
                "alias": "drf",
                "on": "drf.resource_origin_id = orf.id AND drf.organization_id = (SELECT id FROM ${DESTINATION_SCHEMA}.organization WHERE federation_instance_id = ${instance_id})"
            }
        ],
        "macros": [
            {
                "$ref": "etl_macros.d/federated/federated.json#/getInstanceId"
            }
        ]
    }
}
